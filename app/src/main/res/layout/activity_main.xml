<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:onClick="studySimple"
        android:text="@string/studysimple"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:onClick="studyChain"
        android:layout_width="match_parent"
        android:text="@string/studyChain"
        android:layout_height="50dp" />


    <Button
        android:onClick="threadChange"
        android:layout_width="match_parent"
        android:text="@string/threadChange"
        android:layout_height="50dp" />

    <Button
        android:onClick="mapStudy"
        android:layout_width="match_parent"
        android:text="@string/map"
        android:layout_height="50dp" />

    <Button
        android:onClick="flatmapStudy"
        android:layout_width="match_parent"
        android:text="@string/flatmap"
        android:layout_height="50dp" />


</LinearLayout>